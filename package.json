{
  "name": "stacks-contributors-dashboard",
  "version": "0.1.0",
  "description": "A dashboard for tracking contributors and leaders in Stacks projects",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "^6.1.1",
    "@stacks/connect": "^8.2.3",
    "@stacks/transactions": "^7.3.0",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.19",
    "next": "14.2.4",
    "postcss": "8.4.39",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "jest": "^29.6.0",
